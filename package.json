{
  "name": "pump-bot",
  "version": "1.0.0",
  "description": "A simple bot that helps to take profit in organized pump events for cryptos.",
  "main": "program.js",
  "scripts": {
    "compress": "gzip-cli build/pump-bot* -o build/",
    "debug": "node --inspect=127.0.0.1:9239 main.js",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "lint": "npx eslint",
    "lint:watch": "npx esw -w --color",
    "release": "yarn release:linux && yarn release:mac && yarn release:win",
    "release:linux": "pkg package.json --output build/pump-bot-linux-x64 -t node12-linux-x64",
    "release:mac": "pkg package.json --output build/pump-bot-macos-x64 -t node12-macos-x64",
    "release:win": "pkg package.json --output build/pump-bot-win-x64.exe -t node12-win-x64",
    "start": "node main.js",
    "test": "DEBUG=pump-bot:tests jest --silent"
  },
  "keywords": [
    "coin",
    "crypto",
    "cryptocurrency",
    "cryptocurrency-trading-bot",
    "binance",
    "bot",
    "trade",
    "trading",
    "binance",
    "pump",
    "pump-and-dump"
  ],
  "author": "Andrea Valla <valla.andrea@gmail.com>",
  "license": "GPL",
  "dependencies": {
    "chalk": "^4.1.0",
    "commander": "^7.2.0",
    "date-fns": "^2.19.0",
    "debug": "^4.3.1",
    "husky": "^6.0.0",
    "js-yaml": "^4.0.0",
    "node-binance-api": "^0.12.5"
  },
  "devDependencies": {
    "eslint": "^7.20.0",
    "eslint-watch": "^7.0.0",
    "gzip-cli": "^1.2.0",
    "jest": "^26.6.3",
    "pkg": "^4.5.1",
    "prettier": "^2.2.1",
    "pretty-quick": "^3.1.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "engines": {
    "node": ">=12.x.x"
  },
  "bin": "program.js",
  "jest": {
    "displayName": "pump-bot",
    "verbose": true
  }
}
